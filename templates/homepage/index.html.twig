{% extends 'layout.html.twig' %}

{% block content %}

    <div class="jumbotron">

        <h1>symfony/workflow</h1>

        <p>
            This application is a demo to see how the <a href="https://symfony.com/doc/current/components/workflow.html" target="_blank">symfony/workflow</a> component works, and what you can do with.
        </p>

    </div>

    <div class="row">

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">State Machine</h3>
                </div>
                <div class="panel-body">
                    Play with a state machine:
                    <p>
                    <ul>
                        <li>
                            <a href="{{ path('task_index') }}">
                                Task
                            </a>
                        </li>
                    </ul>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Workflow Net</h3>
                </div>
                <div class="panel-body">
                    Play with a workflow net:
                    <p>
                    <ul>
                        <li>
                            <a href="{{ path('article_index') }}">
                                Article
                            </a>
                        </li>
                    </ul>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Workflow Translation (Job Queue)</h3>
                </div>
                <div class="panel-body">
                    Play with a workflow net:
                    <p>
                    <ul>
                        <li>
                            <a href="{{ path('translation_index') }}">
                                Translation
                            </a>
                        </li>
                    </ul>
                    </p>
                </div>
            </div>
        </div>

    </div>

    <hr/>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Transition</h3>
                </div>
                <div class="panel-body">
                    Create a transition:
                    <p>
                    <ul>
                        <li>
                            <a href="{{ path('transition_index') }}">
                                Transition
                            </a>
                        </li>
                    </ul>
                    </p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
